@using Data_Trans_Job.Models



@model List<AppUser>

@{
    ViewData["Title"] = "Users with Recent Posts";
    Layout = "_Layout";
}

<div class="container">
    <h1>Users with Recent Posts</h1>

    @if (Model.Count == 0)
    {
        <p>No users with recent posts found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Address</td>
                        <td>@user.Posts</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>